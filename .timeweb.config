# Timeweb Cloud Configuration
# Используйте эти настройки в панели управления App Platform

[repository]
url = https://github.com/Tips95/golden_house.git
branch = main
auto_deploy = true

[build]
type = nextjs
node_version = 20.x
package_manager = npm
root_directory = /
output_directory = out

[commands]
install = npm install
build = npm run build
start = npm start
# Команда start выполняет: serve out -s -n -l tcp://0.0.0.0:$PORT

[environment]
NODE_ENV = production
NEXT_PUBLIC_SITE_URL = https://tips95-golden-house-dccb.twc1.net

[optional_analytics]
# NEXT_PUBLIC_YANDEX_METRIKA_ID = your_id
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID = your_id
