# Timeweb Cloud Configuration
# Используйте эти настройки в панели управления App Platform

[repository]
url = https://github.com/Tips95/golden_house.git
branch = main
auto_deploy = true

[build]
type = nextjs
node_version = 20.x
package_manager = npm
root_directory = /

[commands]
install = npm install
build = 
start = npm run build && npm start

[environment]
NODE_ENV = production
NEXT_PUBLIC_SITE_URL = https://tips95-golden-house-dccb.twc1.net

